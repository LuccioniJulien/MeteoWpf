<Window x:Class="Meteo.View.Weather"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meteo.ViewModel"
        mc:Ignorable="d"
        Title="Weather" Height="650" Width="450">
    <Window.DataContext>
        <local:WeatherViewModel />
    </Window.DataContext>
    <Grid>
        <ListView ItemsSource="{Binding DailyInfo}" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Top">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Icon}"></Image>
                        <Label Content="{Binding ApparentTemperatureLow}" />
                        <Label Content="{Binding ApparentTemperatureHigh}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Button" HorizontalAlignment="Left" Margin="357,351,0,0" VerticalAlignment="Top" Width="75"
                Command="{Binding CmdInit}" />
    </Grid>
</Window>